{
    "name": "mcp-external-server",
    "version": "1.0.0",
    "description": "A standalone server to run react-cli-mcp against a remote frontend.",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "nodemon --watch src --ext ts,json --exec \"node --loader ts-node/esm src/index.ts\""
    },
    "keywords": [
        "mcp",
        "react-cli-mcp",
        "playwright"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "mcp-ui-bridge": "^0.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.14.12",
        "nodemon": "^3.1.10",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.16.2",
        "typescript": "^5.5.4"
    }
}